{
  "expo": {
    "newArchEnabled": true,
    "name": "rutpoint",
    "slug": "rutpoint",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rutpoint",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rutpoint.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to find nearby taxi ranks",
        "NSLocationAlwaysUsageDescription": "We need your location to find nearby taxi ranks",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.rutpoint.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Rutpoint to use your location to find nearby taxi ranks.",
          "locationAlwaysPermission": "Allow Rutpoint to use your location to find nearby taxi ranks.",
          "locationWhenInUsePermission": "Allow Rutpoint to use your location to find nearby taxi ranks."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    }
  }
}
